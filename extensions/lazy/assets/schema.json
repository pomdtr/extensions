{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "Lazy.Command": {
            "additionalProperties": false,
            "properties": {
                "command": {
                    "type": "string"
                },
                "errorMessage": {
                    "type": "string"
                },
                "shell": {
                    "type": "string"
                },
                "skip_lines": {
                    "type": "number"
                }
            },
            "required": [
                "command"
            ],
            "type": "object"
        },
        "Lazy.FilterList": {
            "additionalProperties": false,
            "properties": {
                "items": {
                    "$ref": "#/definitions/Lazy.ItemTemplate"
                },
                "params": {
                    "$ref": "#/definitions/Lazy.StepEnv"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "filter"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "items",
                "title",
                "type"
            ],
            "type": "object"
        },
        "Lazy.ItemTemplate": {
            "additionalProperties": false,
            "properties": {
                "actions": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/Lazy.RunAction"
                            },
                            {
                                "$ref": "#/definitions/Lazy.RefAction"
                            }
                        ]
                    },
                    "type": "array"
                },
                "delimiter": {
                    "type": "string"
                },
                "generator": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/Lazy.Command"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "icon": {
                    "type": "string"
                },
                "preview": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "generator"
            ],
            "type": "object"
        },
        "Lazy.QueryList": {
            "additionalProperties": false,
            "properties": {
                "items": {
                    "$ref": "#/definitions/Lazy.ItemTemplate"
                },
                "params": {
                    "$ref": "#/definitions/Lazy.StepEnv"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "query"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "items",
                "title",
                "type"
            ],
            "type": "object"
        },
        "Lazy.RefAction": {
            "additionalProperties": false,
            "properties": {
                "alias": {
                    "type": "string"
                },
                "condition": {
                    "type": "string"
                },
                "packageName": {
                    "type": "string"
                },
                "params": {
                    "$ref": "#/definitions/Lazy.StepEnv"
                },
                "shortcut": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "ref"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "target",
                "type"
            ],
            "type": "object"
        },
        "Lazy.RunAction": {
            "additionalProperties": false,
            "properties": {
                "command": {
                    "type": "string"
                },
                "condition": {
                    "type": "string"
                },
                "confirm": {
                    "type": "boolean"
                },
                "errorMessage": {
                    "type": "string"
                },
                "shell": {
                    "type": "string"
                },
                "shortcut": {
                    "type": "string"
                },
                "skip_lines": {
                    "type": "number"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "run"
                    ],
                    "type": "string"
                },
                "updateItems": {
                    "type": "boolean"
                }
            },
            "required": [
                "command",
                "title",
                "type"
            ],
            "type": "object"
        },
        "Lazy.StepEnv": {
            "additionalProperties": {},
            "type": "object"
        }
    },
    "properties": {
        "icon": {
            "type": "string"
        },
        "packageName": {
            "type": "string"
        },
        "prefs": {
            "$ref": "#/definitions/Lazy.StepEnv"
        },
        "requirements": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "roots": {
            "items": {
                "$ref": "#/definitions/Lazy.RefAction"
            },
            "type": "array"
        },
        "steps": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/Lazy.QueryList"
                    },
                    {
                        "$ref": "#/definitions/Lazy.FilterList"
                    }
                ]
            },
            "type": "object"
        }
    },
    "required": [
        "packageName",
        "roots",
        "steps"
    ],
    "type": "object"
}

